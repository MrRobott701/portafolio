---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
    title: string;
    description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/supreSVG.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>

    <body>
        <!-- Aqui va ir un background de la pagina -->
        <div
            class="absolute top-0 left-0 z-0 h-screen w-screen bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(187,0,224,0.3),rgba(255,255,255,0))]">
            <!-- Aqui acaba el back-->
            <Header />
            <slot />
            <Footer />
        </div>

        <style is:global>
            :root {
                color-scheme: light dark;
            }
            html {
                font-family: system-ui, sans-serif;
                scroll-behavior: smooth;
            }

            body {
                background: #050505;
                display: flex;
                flex-direction: column;
                min-height: 100vh;
            }

            @media (prefers-reduced-motion: reduce) {
                html {
                    scroll-behavior: auto;
                }
            }
        </style>
    </body>
</html>
